.container {
  background: rgba(255,255,255,0.8);
}
.user {
  flex: 1;
}

.user_info {
  padding: 20rpx;
  padding-bottom: 10rpx;
  margin-bottom: 15rpx;
}
.user_info_left {
  padding-top: 10rpx;
  margin-right: 20rpx;  
}
.icon-info {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}
.user_info_left image {
  width: 200rpx;
  height: 200rpx;
}
.user_name {
  font-size: 35rpx;
  font-weight: bold;
}
.user_login {
  font-size: 28rpx;
  margin-bottom: 15rpx;
}
.user_company {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.user_location {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.user_email {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.user_blog {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.user_created_at {
  font-size: 28rpx;
}

.user_orgs {
  font-size: 35rpx;
  font-weight: bold;
  padding: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #E2E2E2;
}
.user_orgs_title {
  margin-bottom: 10rpx;
}
.user_orgs_list {
  flex-wrap: wrap;
}
.user_orgs_list__image {
  margin: 5rpx;
  width: 55rpx;
  height: 55rpx;
}

.user_status {
  padding: 10rpx 20rpx;
}
.user_status_info {
  padding: 0 50rpx;
}
.user_status_info__view {
  flex: 1;
  margin-top: 10rpx;
}
.user_status_info__view view {
  font-weight: bold;
  font-size: 35rpx;
}
.user_status_info__view text {
  font-size: 30rpx;
}

.user_repos {
  margin-top: 10rpx;
}
.user_repo {
  border-top: 1px solid #E2E2E2;
  padding: 12rpx 20rpx;
}
.icon-repo {
  width: 45rpx;
  height: 45rpx;
  margin-top: 5rpx;
}
.user_repo_center {
  flex: 1 0 350rpx;
  margin-left: 15rpx;
}
.user_repo_name {
  font-weight: bold;
  font-size: 34rpx;
}
.user_repo_desc {
  font-size: 25rpx;
  margin-top: 10rpx;
  padding-right: 50rpx;
}
.user_repo_right {
  align-items: flex-end;
}
.user_repo_language {
  height: 38rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.user_repo_star_count {
  font-size: 28rpx;
  display: flex;
  align-items: flex-end;
}
.icon-star {
  width: 40rpx;
  height: 40rpx;
}